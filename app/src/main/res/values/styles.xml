<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--no actionbar and title-->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- 抽屉菜单效果 -->
        <item name="drawerArrowStyle">@style/AppTheme.JDDrawerArrowStyle</item>

        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>
    </style>

    <style name="AppTheme.JDDrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <!--是否开启导航图标的旋转效果-->
        <item name="spinBars">false</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="CustomTabPageIndicator.Text" parent="android:TextAppearance.Medium">
        <item name="android:typeface">monospace</item>
    </style>

    <!--pager tab-->
    <style name="pagertab_style">
        <item name="android:background">@android:color/white</item>
        <item name="apTabBackground">@android:color/transparent</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAppearance">@style/CustomTabPageIndicator.Text</item>
        <item name="android:textColor">@drawable/tab_color_select</item>
        <item name="apTabIndicatorColor">@color/colorPrimaryBright</item>
        <item name="apTabUnderlineColor">@android:color/transparent</item>
        <item name="apTabDividerColor">@android:color/transparent</item>
        <item name="apTabShouldExpand">false</item>
        <item name="apTabPaddingLeftRight">0dp</item>
        <item name="apTabDrawMode">text</item>
        <item name="apTabTextSelectColor">@android:color/black</item>
    </style>

    <style name="leaderboard_bg">
        <!--no actionbar and title-->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- 抽屉菜单效果 -->
        <item name="drawerArrowStyle">@style/AppTheme.JDDrawerArrowStyle</item>

        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="LeaderBoardDialogStyle" parent="@android:style/Theme.Dialog">
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- 背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">@android:color/transparent</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 背景模糊 -->
        <item name="android:windowContentOverlay">@null</item>
        <!-- 允许对话框的背景变暗 -->
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="AddDialogStyle" parent="@android:style/Theme.Dialog">
        <!-- 背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- 浮于Activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- 允许对话框的背景变暗 -->
        <item name="android:backgroundDimAmount">0.8</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- Dialog进入及退出动画 -->
        <!--<item name="android:windowAnimationStyle">@style/AddDialogAnimation</item>-->
    </style>

